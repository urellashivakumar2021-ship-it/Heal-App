<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/heal_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track Your Health"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/heal_primary_dark"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center" />

        <EditText
            android:id="@+id/etSleep"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Hours of Sleep"
            android:inputType="number"
            android:background="@drawable/heal_input_bg"
            android:padding="12dp"
            android:layout_marginBottom="14dp" />

        <EditText
            android:id="@+id/etWater"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Water Intake (Liters)"
            android:inputType="numberDecimal"
            android:background="@drawable/heal_input_bg"
            android:padding="12dp"
            android:layout_marginBottom="14dp" />

        <EditText
            android:id="@+id/etStress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Stress Level (1-10)"
            android:inputType="number"
            android:background="@drawable/heal_input_bg"
            android:padding="12dp"
            android:layout_marginBottom="14dp" />

        <EditText
            android:id="@+id/etDiet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Diet Description"
            android:inputType="text"
            android:background="@drawable/heal_input_bg"
            android:padding="12dp"
            android:layout_marginBottom="14dp" />

        <EditText
            android:id="@+id/etActivity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Physical Activity"
            android:inputType="text"
            android:background="@drawable/heal_input_bg"
            android:padding="12dp"
            android:layout_marginBottom="14dp" />

        <EditText
            android:id="@+id/etMood"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Mood"
            android:inputType="text"
            android:background="@drawable/heal_input_bg"
            android:padding="12dp"
            android:layout_marginBottom="14dp" />

        <EditText
            android:id="@+id/etHeart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Heart Rate (BPM)"
            android:inputType="number"
            android:background="@drawable/heal_input_bg"
            android:padding="12dp"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btnSaveHealth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/HealButton"
            android:text="Save Health Log" />

        <Button
            android:id="@+id/btnAdvice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/HealButton"
            android:text="Generate Quick Advice"
            android:layout_marginTop="14dp" />

    </LinearLayout>
</ScrollView>
