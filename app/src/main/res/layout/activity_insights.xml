<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/heal_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtInsightsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Health Insights"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/heal_primary_dark"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"/>


        <!-- Sleep Trend -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sleep Trend"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/heal_primary_dark"
            android:layout_marginBottom="8dp"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartSleep"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#FFFFFF" />


        <!-- Water Intake Trend -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water Intake Trend"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/heal_primary_dark"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartWater"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#FFFFFF" />


        <!-- Heart Rate Trend -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heart Rate Trend"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/heal_primary_dark"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartHeart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#FFFFFF" />

    </LinearLayout>
</ScrollView>
