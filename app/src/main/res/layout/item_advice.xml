<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:layout_margin="10dp"
    android:elevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- DOCTOR NAME -->
    <TextView
        android:id="@+id/txtAdviceDoctor"
        android:text="Dr. John Smith"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#005B63"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- TIMESTAMP -->
    <TextView
        android:id="@+id/txtAdviceTimestamp"
        android:text="2024-01-01 10:00 AM"
        android:textSize="13sp"
        android:textColor="#666666"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- ADVICE CONTENT -->
    <TextView
        android:id="@+id/txtAdviceText"
        android:text="Drink more water and take proper rest."
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
